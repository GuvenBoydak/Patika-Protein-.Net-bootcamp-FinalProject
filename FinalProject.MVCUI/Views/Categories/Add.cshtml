@model CategoryVM
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

   @if(ViewBag.FailAdd!=null)
    {
          <div class="alert alert-danger">
                @ViewBag.FailAdd
            </div>
    }


<div class="container">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <form asp-action="Add" asp-controller="Categories" method="post">
                <div class="form-group">
                    <label> Kategori İsmi</label>
                  <input type="text" asp-for="CategoryAddDto.Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label> Kategori Açıklaması</label>
                   <input type="text" asp-for="CategoryAddDto.Description" class="form-control" />
                </div>
                <div class="form-group">
                    <button class="btn btn-primary">Ekle</button>
                </div>
            </form>

        </div>
    </div>
</div>