@model ProductsVM
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <form asp-action="Add" asp-controller="Products" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label> Ürün İsmi</label>
                    <input type="text" asp-for="ProductAddDto.Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label> Ürün Fiyat</label>
                    <input type="text" asp-for="ProductAddDto.UnitPrice" class="form-control" />
                </div>
                <div class="form-group">
                    <label> Ürün Açıklama</label>
                    <input type="text" asp-for="ProductAddDto.Description" class="form-control" />
                </div>
                <div class="form-group">
                    <label> Ürün Resmi</label>
                    <input type="file" asp-for="ProductAddDto.ImageUrl" class="form-control" />
                </div>
                <div class="form-group">
                    <label> Ürün Kategorisi</label>
                    <select asp-for="ProductAddDto.CategoryID" asp-items="@(new SelectList(Model.Categories,"ID","Name"))" class="form-control">
                        <option selected="selected" value="1">Please select</option>
                    </select>
                </div>
                <div class="form-group">
                    <label> Ürün Rengi </label>
                    <select asp-for="ProductAddDto.ColorID" asp-items="@(new SelectList(Model.Colors,"ID","Name"))" class="form-control">
                        <option selected="selected" value="1">Please select</option>
                    </select>
                </div>
                <div class="form-group">
                    <label> Ürün Markası </label>
                    <select asp-for="ProductAddDto.BrandID" asp-items="@(new SelectList(Model.Brands,"ID","Name"))" class="form-control">
                        <option selected="selected" value="0">Please select</option>
                    </select>
                </div>
                <div class="form-group">
                    <label> Ürün Kullanım durumu</label>
                    <select asp-for="ProductAddDto.UsageStatus" class="form-control" asp-items="Html.GetEnumSelectList<UsageStatus>()">
                        <option>Please select</option>
                    </select>
                </div>

                <div class="form-group">
                    <button class="btn btn-primary">Ekle</button>
                </div>
            </form>

        </div>
    </div>
</div>


