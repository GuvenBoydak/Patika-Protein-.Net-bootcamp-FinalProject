@model ProductsVM
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.Fail != null)
{
    <div class="alert alert-danger">
        @ViewBag.Fail
    </div>
}


<div class="container">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <form asp-action="Add" asp-controller="Products" method="post" enctype="multipart/form-data">

                <input type="hidden" asp-for="ProductUpdateDto.ID" />
                <div class="form-group">
                    <label> Ürün İsmi</label>
                    <input type="text" asp-for="ProductUpdateDto.Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label> Ürün Fiyat</label>
                    <input type="text" asp-for="ProductUpdateDto.UnitPrice" class="form-control" />
                </div>
                <div class="form-group">
                    <label> Ürün Açıklama</label>
                    <input type="text" asp-for="ProductUpdateDto.Description" class="form-control" />
                </div>
                <div class="form-group">
                    <label> Ürün Resmi</label>
                    <input type="file" asp-for="ProductUpdateDto.ImageUrl" class="form-control" />
                </div>
                <div class="form-group">
                    <label> Ürün Kategorisi</label>
                    <select asp-for="ProductUpdateDto.CategoryID" asp-items="@(new SelectList(Model.Categories,"ID","Name"))" class="form-control">
                        <option selected="selected" value="1">Please select</option>
                    </select>
                </div>
                <div class="form-group">
                    <label> Ürün Rengi </label>
                    <select asp-for="ProductUpdateDto.ColorID" asp-items="@(new SelectList(Model.Colors,"ID","Name"))" class="form-control">
                        <option selected="selected" value="1">Please select</option>
                    </select>
                </div>
                <div class="form-group">
                    <label> Ürün Markası </label>
                    <select asp-for="ProductUpdateDto.BrandID" asp-items="@(new SelectList(Model.Brands,"ID","Name"))" class="form-control">
                        <option selected="selected" value="0">Please select</option>
                    </select>
                </div>
                <div class="form-group">
                    <label> Ürün Kullanım durumu</label>
                    <select asp-for="ProductUpdateDto.UsageStatus" class="form-control" asp-items="Html.GetEnumSelectList<UsageStatus>()">
                        <option>Please select</option>
                    </select>
                </div>

                <div class="form-group">
                    <button class="btn btn-primary">Güncelle</button>
                </div>
            </form>

        </div>
    </div>
</div>


