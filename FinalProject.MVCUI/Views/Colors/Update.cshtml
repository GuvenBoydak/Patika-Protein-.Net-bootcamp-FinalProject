@model ColorVM
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.Fail != null)
{
    <div class="alert alert-danger">
        @ViewBag.Fail
    </div>
}

<div class="container">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <form asp-action="Update" asp-controller="Colors" method="post">
                <input asp-for="ColorUpdateDto.ID" type="hidden" />

                <div class="form-group">
                    <label> Renk İsmi</label>
                  <input type="text" asp-for="ColorUpdateDto.Name" class="form-control" />
                </div>
                <div class="form-group">
                    <button class="btn btn-primary">Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>



