@model OfferVM
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.FailUpdate != null)
{
    <div class="alert alert-danger">
        @ViewBag.FailUpdate
    </div>
}

<div class="container">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <form asp-action="Update" asp-controller="Offers" method="post">
                <input asp-for="Offer.ID" type="hidden" />

                <div class="form-group">
                    <label> Teklif Edilen Fiyat</label>
                  <input type="text" asp-for="Offer.Price" class="form-control" />
                </div>
                <div class="form-group">
                    <button class="btn btn-primary">Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>

