@model OfferVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="alert alert-success alert-dismissible fade show" role="alert">
    @TempData["OfferSucces"]
    @TempData["BuyProductSucces"] 
    @TempData["Update"]
    @TempData["Delete"]
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>


<div class="container">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <section class="panel">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Teklif fiyatı</th>
                            <th>Teklif Durumu</th>
                            <th>Teklif Yapan kullanıcı</th>
                            <th>Teklif Edilen Ürün</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int id = 0;
                        }
                        @foreach (OfferListDto item in Model.OfferListDtos)
                        {
                            <tr>
                                @{
                                    id++;
                                }
                                <td>@id</td>
                                <td>@item.Price</td>

                                @if (item.IsApproved == true)
                                {
                                    <td>Teklif Kabul Edilmiş</td>
                                }
                                else
                                {
                                    <td>Teklif Kabul <strong>Edilmemiş</strong></td>
                                }
                                <td>
                                    @foreach (AppUserListDto appUser in Model.AppUserListDtos)
                                    {
                                        if (appUser.ID == item.AppUserID)
                                            @appUser.UserName
                                        ;
                                    }
                                </td>
                                <td>
                                    @foreach (ProductListDto product in Model.ProductListDtos)
                                    {
                                        if (product.ID == item.ProductID)
                                            @product.Name
                                        ;
                                    }
                                </td>
                                <td>
                                    <a asp-action="Update" asp-route-id="@item.ID" class="btn btn-warning">Güncelle</a>
                                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </section>
        </div>

    </div>
</div>








