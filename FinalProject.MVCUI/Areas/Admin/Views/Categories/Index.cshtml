@model CategoryVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.FailDelete != null)
{
    <div class="alert alert-danger">
        @ViewBag.FailDelete
    </div>
}


<div class="container">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <section class="panel">
                <header class="panel-heading">
                    Kategori Eklemek için <a asp-action="Add" class="btn btn-outline-success">Tıklayınız</a>
                </header>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Kategori ismi</th>
                            <th>Kategori Açıklma</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int id = 0;
                        }
                        @foreach (CategoryModel item in Model.Categories)
                        {
                            <tr>
                                @{
                                    id++;
                                }
                                <td>@id</td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>
                                    <a asp-action="Update" asp-route-id="@item.ID" class="btn btn-warning">Güncelle</a>
                                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </section>
        </div>

    </div>
</div>





