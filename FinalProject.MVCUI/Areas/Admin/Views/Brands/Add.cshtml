@model BrandVM

@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

    @if(ViewBag.FailAdd!=null)
    {
          <div class="alert alert-danger">
                @ViewBag.FailAdd
            </div>
    }

<div class="container">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <form asp-action="Add" asp-controller="Brands" method="post">
                <div class="form-group">
                    <label> Marka İsmi</label>
                  <input type="text" asp-for="Brand.Name" class="form-control" />
                <span asp-validation-for="Brand.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary">Ekle</button>
                </div>
            </form>
        </div>
    </div>
</div>


