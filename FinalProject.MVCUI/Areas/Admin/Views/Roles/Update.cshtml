@model RoleVM
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@if(ViewBag.FailUpdate!=null)
{
      <div class="alert alert-danger">
            @ViewBag.FailUpdate
        </div>
}


<div class="container">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <form asp-action="Update" asp-controller="Roles" method="post">
                  <input type="hidden" asp-for="Role.ID" />
                <div class="form-group">
                    <label> Rol İsmi</label>
                  <input type="text" asp-for="Role.Name" class="form-control" />
                <span asp-validation-for="Role.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary">Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>

