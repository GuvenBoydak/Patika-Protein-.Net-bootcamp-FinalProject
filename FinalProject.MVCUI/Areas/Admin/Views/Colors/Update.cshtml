@model ColorVM

@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.Fail != null)
{
    <div class="alert alert-danger">
        @ViewBag.Fail
    </div>
}


@if (ViewBag.FailUpdate != null)
{
    <div class="alert alert-danger">
        @ViewBag.FailUpdate
    </div>
}


<div class="container">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <form asp-action="Update" asp-controller="Colors" method="post">
                <input asp-for="Color.ID" type="hidden" />

                <div class="form-group">
                    <label> Renk İsmi</label>
                  <input type="text" asp-for="Color.Name" class="form-control" />
                <span asp-validation-for="Color.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary">Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>



